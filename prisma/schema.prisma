// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}

model Skill {
  id           Int            @id @default(autoincrement())
  name         String
  slot         String
  cond         Condition[]
  effect       Effect[]
  restrictions Restrictions[]
}

model Restrictions {
  id         Int    @id @default(autoincrement())
  weapon     String
  color      String
  skill Skill? @relation(fields: [skillId], references: [id])
  skillId    Int?
}

model Condition {
  id      Int    @id @default(autoincrement())
  target  String
  action  String
  skill   Skill? @relation(fields: [skillId], references: [id])
  skillId Int?
}

model Effect {
  id          Int     @id @default(autoincrement())
  description String
  deltaSoft   String?
  deltaHard   String?
  deltaFlat   String?
  skill       Skill?  @relation(fields: [skillId], references: [id])
  skillId     Int
}
